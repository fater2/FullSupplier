@model IEnumerable<Supplier.Models.Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/NewFolder/_Layout.cshtml";
}
<!-- Bootstrap core CSS -->
<link href="~/css/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

<!-- Page Content -->
<body >

    <div class="container" style="margin-top:70px;">

        <div class="row">

            <div class="col-lg-3">

                <h1 class="my-4">Shop Name</h1>
                <div class="list-group">
                    @foreach (var item in Model)
                    {

                        <a asp-controller="Products" asp-action="CategoryProducts" asp-route-id="@item.Id"> @Html.DisplayFor(model => item.Name)</a>
                    }
                </div>

            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">

                <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="row">
                    <!--card-->
                    @foreach (var item in Model)
                    {

                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a  asp-controller="Products" asp-action="CategoryProducts" asp-route-id="@item.Id">
                                    <img class="card-img-top" src="@("~/image/"+item.images.First().Name)" asp-append-version="true" alt="">
                                </a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a asp-controller="Products" asp-action="CategoryProducts" asp-route-id="@item.Id"> @Html.DisplayFor(model => item.Name)</a>
                                    </h4>

                                    <p class="card-text">
                                        @Html.DisplayFor(model => item.Description)
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                </div>
                            </div>
                        </div>

                    }

                    <!--end of card -->




                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->

    </div>
</body>
<!-- /.container -->
