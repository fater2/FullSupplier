@using Microsoft.AspNetCore.Identity
@using Supplier.Areas.Identity.Data

@inject SignInManager<Admin> SignInManager
@inject UserManager<Admin> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> Hello @ViewData["UserFirstName"] </a>
            </li>

        }
        else
        {

            <li class="nav-item">
                <a style="color:blue" class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
            <li class="nav-item">
                <a style="color:blue" class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
        }
    </ul>
