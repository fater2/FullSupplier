<p>
    <a class="btn btn-primary" asp-action="Create">Create New Category-Product</a>
</p>
<div id="dataDiv" style=" margin-left:10px; padding:5px;">
    <table id="customerDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    Category
                </th>
                <th>
                    Product
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId">
                           <i class="far fa-edit fa-lg text-dark"></i><!--For Edit-->
                        </a> |
                        <a asp-action="Details" asp-route-id="@item.ProductId">
                           <i style="color:blue;" class="far fa-lg fa-question-circle"></i><!--For Details-->
                        </a>  |
                        <a asp-action="Delete" asp-route-id="@item.ProductId">
                           <i class="far fa-trash-alt fa-lg text-danger"></i><!--For Delete-->
                        </a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
