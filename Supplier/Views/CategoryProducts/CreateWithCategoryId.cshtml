@model Supplier.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/NavbarAdmin.cshtml";}

<h1>Create</h1>

<h4>Adding Product to Category @Html.DisplayFor(model => model.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateWithCategoryId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="number"  asp-for="Id" />
                <label asp-for="Products" class="control-label"></label>
                <select  asp-for="Products" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
