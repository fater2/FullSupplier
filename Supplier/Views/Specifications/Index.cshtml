@model IEnumerable<Supplier.Models.Specification>

@{
    ViewData["Title"] = "Specifications";
    Layout = "~/Views/Shared/NavbarAdmin.cshtml";}

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New Specification</a>
    </p>
<div id="dataDiv" style=" margin-left:10px; padding:5px;">
    <table id="customerDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.value)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CategorySpecification)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.value)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CategorySpecification.Id)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/customerDatatable.js"></script>
    <script>
    $(document).ready(function () {
            $('#customerDatatable').dataTable({
            });
        });</script>
}
